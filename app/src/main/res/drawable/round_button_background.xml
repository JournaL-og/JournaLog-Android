        <shape android:shape="oval">
            <solid android:color="#FF0000" /> <!-- 버튼이 눌렸을 때의 배경 색상 -->
            <stroke android:color="#000000" android:width="2dp" /> <!-- 테두리 색상 및 두께 -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/red_sw" /> <!-- 버튼의 기본 배경 색상 -->
            <stroke android:color="#000000" android:width="2dp" /> <!-- 테두리 색상 및 두께 -->
        </shape>
    </item>
</selector>