    <style name="LIGHT_THEME_4" parent="Theme.Material3.DayNight.NoActionBar">
        <!--        상단 갤럭시 상태바 색상 설정-->
        <item name="colorPrimary">@color/peppergreen</item>
        <item name="colorPrimaryDark">@color/peppermint</item>
