<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  반정현 작성 - 24.01.24-->
    <style name="LIGHT_THEME_1" parent="Theme.Material3.DayNight.NoActionBar">
        <!--        상단 갤럭시 상태바 색상 설정-->
        <item name="colorPrimary">@color/moon</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/moon</item>
        <!--        전체적인 배경색 설정-->
        <item name="android:colorBackground">@color/customWhite</item>
        <item name="memocolor">@color/white</item>
        <item name="calendercolor">@color/white</item>
        <item name="pickcolor">@color/moon</item>
        <item name="navigationpick">@color/moon</item>
        <item name="iconcolor">@color/black</item>
        <item name="modalbackground">@color/grey</item>
        <item name="bottombackground">@color/white</item>
    </style>

