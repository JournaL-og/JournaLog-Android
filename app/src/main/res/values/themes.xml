<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BasicTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        전체적인 배경색 설정-->
        <item name="android:colorBackground">@color/grey</item>
        <item name="memocolor">@color/white</item>
        <item name="calendercolor">@color/white</item>
        <item name="pickcolor">@color/moon</item>
        <item name="navigationpick">@color/moon</item>
        <item name="iconcolor">@color/black</item>
        <item name="modalbackground">@color/grey</item>
        <item name="bottombackground">@color/white</item>
    </style>


    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_modal_bottom_sheet</item>
    </style>



</resources>